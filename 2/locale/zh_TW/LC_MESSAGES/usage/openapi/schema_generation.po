msgid ""
"from litestar import Litestar\n"
"from litestar.openapi import OpenAPIConfig\n"
"\n"
"app = Litestar(\n"
"    route_handlers=[...], openapi_config=OpenAPIConfig(title=\"My API\", "
"version=\"1.0.0\")\n"
")"
