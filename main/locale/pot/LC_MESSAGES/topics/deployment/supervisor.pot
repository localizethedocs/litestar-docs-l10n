#: ../../../topics/deployment/supervisor.rst:44
msgid "Example supervisor config file"
msgstr ""

#: ../../../topics/deployment/supervisor.rst:44
msgid ""
"[program:exampleapp]  # Defines the service name.\n"
"directory=/opt/exampleapp/src  # Specifies the directory where the service "
"should run.\n"
"command=/opt/exampleapp/venv/bin/litestar app.py  # Specifies the command to "
"run the service.\n"
"redirect_stderr=true  # Redirects stderr to stdout.\n"
"stdout_logfile=/var/log/exampleapp.log  # Specifies the log file to write "
"to.\n"
"stdout_logfile_backups=10  # Specifies the number of backups to keep.\n"
"autostart=true  # Specifies that the service should start automatically when "
"``supervisor`` starts.\n"
"autorestart=true  # Specifies that the service should restart automatically "
"if it exits unexpectedly."
msgstr ""

#: ../../../topics/deployment/supervisor.rst:56
