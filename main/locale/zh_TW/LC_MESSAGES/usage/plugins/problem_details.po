#: ../../../usage/plugins/problem_details.rst:7
msgid ""
"Problem details are a standardized way of providing machine-readable details "
"of errors in HTTP responses as specified in `RFC 9457`_, the latest RFC at "
"the time of writing."
msgstr ""

#: ../../../usage/plugins/problem_details.rst:13
msgid "Usage"
msgstr ""

#: ../../../usage/plugins/problem_details.rst:15
msgid ""
"To send a problem details response, the ``ProblemDetailsPlugin`` should be "
"registered and then a ``ProblemDetailsException`` can be raised anywhere "
"which will automatically be converted into a problem details response."
msgstr ""

#: ../../../usage/plugins/problem_details.rst:20
msgid "Basic usage of the problem details plugin."
msgstr ""

#: ../../../usage/plugins/problem_details.rst:20
msgid ""
"from dataclasses import dataclass\n"
"\n"
"from litestar import Litestar, post\n"
"from litestar.plugins.problem_details import ProblemDetailsConfig, "
"ProblemDetailsException, ProblemDetailsPlugin\n"
"\n"
"\n"
"@dataclass\n"
"class PurchaseItem:\n"
"    item_id: int\n"
"    quantity: int\n"
"\n"
"\n"
"@post(\"/purchase\")\n"
"async def purchase(data: PurchaseItem) -> None:\n"
"    # Logic to check if the user has enough credit to buy the item.\n"
"    # We assume the user does not have enough credit.\n"
"\n"
"    raise ProblemDetailsException(\n"
"        type_=\"https://example.com/probs/out-of-credit\",\n"
"        title=\"You do not have enough credit.\",\n"
"        detail=\"Your current balance is 30, but that costs 50.\",\n"
"        instance=\"/account/12345/msgs/abc\",\n"
"        extra={\"balance\": 30},\n"
"    )\n"
"\n"
"\n"
"problem_details_plugin = ProblemDetailsPlugin(ProblemDetailsConfig())\n"
"app = Litestar(route_handlers=[purchase], plugins=[problem_details_plugin])"
msgstr ""

