msgid "1 - Responses that don't make any changes to DOM"
msgstr ""

#: ../../../usage/htmx.rst:127
msgid ""
"Use :class:`~litestar.plugins.htmx.HXStopPolling` to stop polling for a "
"response."
msgstr ""

#: ../../../usage/htmx.rst:130
msgid ""
"@get(\"/\")\n"
"def handler() -> HXStopPolling:\n"
"    ...\n"
"    return HXStopPolling()"
msgstr ""

#: ../../../usage/htmx.rst:136
msgid ""
"Use :class:`~litestar.plugins.htmx.ClientRedirect` to redirect with a page "
"reload."
msgstr ""

#: ../../../usage/htmx.rst:139
msgid ""
"@get(\"/\")\n"
"def handler() -> ClientRedirect:\n"
"    ...\n"
"    return ClientRedirect(redirect_to=\"/contact-us\")"
msgstr ""

#: ../../../usage/htmx.rst:145
msgid ""
"Use :class:`~litestar.plugins.htmx.ClientRefresh` to force a full page "
"refresh."
msgstr ""

#: ../../../usage/htmx.rst:148
msgid ""
"@get(\"/\")\n"
"def handler() -> ClientRefresh:\n"
"    ...\n"
"    return ClientRefresh()"
msgstr ""

#: ../../../usage/htmx.rst:155
msgid "2 - Responses that may change DOM"
msgstr ""

#: ../../../usage/htmx.rst:157
msgid ""
"Use :class:`~litestar.plugins.htmx.HXLocation` to redirect to a new location "
"without page reload."
msgstr ""

#: ../../../usage/htmx.rst:159
msgid ""
"This class provides the ability to change ``target``, ``swapping`` method, "
"the sent ``values``, and the ``headers``."
msgstr ""

#: ../../../usage/htmx.rst:162
msgid ""
"@get(\"/about\")\n"
"def handler() -> HXLocation:\n"
"    ...\n"
"    return HXLocation(\n"
"        redirect_to=\"/contact-us\",\n"
"        # Optional parameters\n"
"        source,  # the source element of the request.\n"
"        event,  # an event that \"triggered\" the request.\n"
"        target=\"#target\",  # element id to target to.\n"
"        swap=\"outerHTML\",  # swapping method to use.\n"
"        hx_headers={\"attr\": \"val\"},  # headers to pass to HTMX.\n"
"        values={\"val\": \"one\"},\n"
"    )  # values to submit with response."
msgstr ""

#: ../../../usage/htmx.rst:177
msgid ""
"Use :class:`~litestar.plugins.htmx.PushUrl` to carry a response and push a "
"url to the browser, optionally updating the ``history`` stack."
msgstr ""

#: ../../../usage/htmx.rst:179
msgid ""
"If the value for ``push_url`` is set to ``False`` it will prevent updating "
"browser history."
msgstr ""

#: ../../../usage/htmx.rst:182
msgid ""
"@get(\"/about\")\n"
"def handler() -> PushUrl:\n"
"    ...\n"
"    return PushUrl(content=\"Success!\", push_url=\"/about\")"
msgstr ""

#: ../../../usage/htmx.rst:188
msgid ""
"Use :class:`~litestar.plugins.htmx.ReplaceUrl` to carry a response and "
"replace the url in the browser's ``location`` bar."
msgstr ""

#: ../../../usage/htmx.rst:190
msgid ""
"If the value to ``replace_url`` is set to ``False`` it will prevent updating "
"the browser's location."
msgstr ""

#: ../../../usage/htmx.rst:193
msgid ""
"@get(\"/contact-us\")\n"
"def handler() -> ReplaceUrl:\n"
"    ...\n"
"    return ReplaceUrl(content=\"Success!\", replace_url=\"/contact-us\")"
msgstr ""

#: ../../../usage/htmx.rst:199
msgid ""
"Use :class:`~litestar.plugins.htmx.Reswap` to carry a response with a "
"possible swap."
msgstr ""

#: ../../../usage/htmx.rst:202
msgid ""
"@get(\"/contact-us\")\n"
"def handler() -> Reswap:\n"
"    ...\n"
"    return Reswap(content=\"Success!\", method=\"beforebegin\")"
msgstr ""

#: ../../../usage/htmx.rst:208
msgid ""
"Use :class:`~litestar.plugins.htmx.Retarget` to carry a response and change "
"the target element."
msgstr ""

#: ../../../usage/htmx.rst:211
msgid ""
"@get(\"/contact-us\")\n"
"def handler() -> Retarget:\n"
"    ...\n"
"    return Retarget(content=\"Success!\", target=\"#new-target\")"
msgstr ""

#: ../../../usage/htmx.rst:217
msgid ""
"Use :class:`~litestar.plugins.htmx.TriggerEvent` to carry a response and "
"trigger an event."
msgstr ""

#: ../../../usage/htmx.rst:220
msgid ""
"@get(\"/contact-us\")\n"
"def handler() -> TriggerEvent:\n"
"    ...\n"
"    return TriggerEvent(\n"
"        content=\"Success!\",\n"
"        name=\"showMessage\",\n"
"        params={\"attr\": \"value\"},\n"
"        after=\"receive\",  # possible values 'receive', 'settle', and "
"'swap'\n"
"    )"
msgstr ""
