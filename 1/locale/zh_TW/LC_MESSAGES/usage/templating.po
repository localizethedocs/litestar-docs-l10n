msgid ""
"<html>\n"
"    <body>\n"
"        <div>\n"
"            <form action=\"https://myserverurl.com/some-endpoint\" "
"method=\"post\">\n"
"                {{ csrf_input }}\n"
"                <label for=\"fname\">First name:</label><br>\n"
"                <input type=\"text\" id=\"fname\" name=\"fname\">\n"
"                <label for=\"lname\">Last name:</label><br>\n"
"                <input type=\"text\" id=\"lname\" name=\"lname\">\n"
"            </form>\n"
"        </div>\n"
"    </body>\n"
"</html>"
